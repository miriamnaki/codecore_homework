</nav>

<div class="card">
  <div class="card-body">

 
  <%if(cohort){%>
    <div>
      <h2 class='card-title'><%= cohort.name %></h2>
      <p class='card-text'><%= cohort.members %></p>
    </div>
    
    <hr>

    
    <form action="" method="GET" id="form-id">
      <div>
        <h5><label for="method" class="card-title">Method</label></h5> 

        <input class="card-text" type="radio" id="method" name="choice" name="team_count" value="team_count" required>&nbsp;Team Count

        <br>

        <input class="card-text"type="radio" id="choice" name="choice" name="number_per_team" value="number_per_team" required>&nbsp;Number Per Team
      </div>

      <br>

      <div class='form-group'>
        <label for="quantity">Quantity</label>
        <input
          type='number'
          class='form-control'
          name='quantity' required>
      </div>      
        <div class="form-group">
          <input type="submit"class="btn btn-outline-primary btn-lg btn-block" value="Assign Teams">
        </div>
    </form>
  

    <%if(choice && quantity){%>
     <% let numbers = cohort.members.split(',')%>
     <%=numbers.length%>
     <%if((choice === 'team_count') && (numbers.length < quantity)){%>
        <div class="alert alert-danger" role="alert">
          Number of teams must be between 1 and the number of member
        </div>

      <%}else{%>
      <div>
        <table class="table">        
            <tr>
            <th scope="col">#</th>
            <th scope="col">Members</th>
          </tr>         
        <tbody>
          <%details.forEach((member,num)=>{%>
            <tr>
              <th><%= num + 1%></th>
              <td><%= member%></td>
            </tr>
            <%})%>
        </tbody>
        </table>
      </div>
      <%}%>
      <%}%>
    <%}%>
  </div>
</div>


